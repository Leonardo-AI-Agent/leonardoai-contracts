{
  "name": "leonardoai-contracts",
  "version": "1.0.0",
  "description": "LeonardoAI contracts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "forge test --gas-report -vvv",
    "build": "forge build --sizes",
    "coverage": "forge coverage --report lcov && lcov --ignore-errors inconsistent --remove lcov.info 'script/*' --remove lcov.info --output-file lcov.info --rc lcov_branch_coverage=1 && genhtml --ignore-errors inconsistent lcov.info -o report --branch-coverage && open report/index.html",
    "solhint:check": "npx solhint --max-warnings 0 --ignore-path .solhintignore 'src/**/*.sol'",
    "solhint:fix": "npx solhint --max-warnings 0 --ignore-path .solhintignore 'src/**/*.sol' --fix",
    "doc": "forge doc --build --serve --port 8000",
    "publish:major": "npm version major && git push origin master develop --follow-tags",
    "publish:minor": "npm version minor && git push origin master develop --follow-tags",
    "publish:patch": "npm version patch && git push origin master develop --follow-tags",
    "deployAsset:sepolia": "source .env && forge script DeployAsset --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "deployAsset:base": "source .env && forge script DeployAsset --rpc-url ${RPC_BASE} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "deployStaking:sepolia": "source .env && forge script DeployStaking --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "deployStaking:base": "source .env && forge script DeployStaking --rpc-url ${RPC_BASE} --private-key ${PRIVATE_KEY} -vvvv --slow --verify --etherscan-api-key ${BASESCAN_API_KEY}",
    "deployUSDC:sepolia": "source .env && forge script DeployUSDC --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "deployRewards:sepolia": "source .env && forge script DeployRewards --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "deployRewards:base": "source .env && forge script DeployRewards --rpc-url ${RPC_BASE} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "grantRoleRewards:sepolia": "source .env && forge script GrantRoleRewards --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow --verify --etherscan-api-key ${BASESCAN_API_KEY}",
    "grantRoleRewards:base": "source .env && forge script GrantRoleRewards --rpc-url ${RPC_BASE} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "upgradeRewards:sepolia": "source .env && forge script UpgradeRewards --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "upgradeStaking:sepolia": "source .env && forge script UpgradeStaking --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow",
    "setCooldownTime:sepolia": "source .env && forge script SetCooldownTime --rpc-url ${RPC_SEPOLIA} --private-key ${PRIVATE_KEY} -vvvv --slow"
  },
  "license": "Unlicensed"
}
